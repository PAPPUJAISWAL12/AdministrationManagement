@model List<FeemanagementSystem.Models.FeeStructureView>


<table class="table table-bordered mt-3" align="center" id="data">
    <thead>
        <tr>
            <th>S.N.</th>
            <th>Fee Title</th>
            <th>
                Amount
            </th>
            <th>
             DueDate
            </th>
            <th>
               EntryTime
            </th>
            <th>Class</th>
            <th>Entry By</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>@item.Title</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryTime)
                </td>
                <td>@item.Cid</td>
                <td>
                    @item.EntryBy
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.FsId">Edit</a> |
                    <a asp-action="Create" asp-controller="FeeSheets" asp-route-id="@item.Cid" asp-route-param="@item.Fid" asp-route-ammount="@item.Amount" class="btn btn-dark" data-ajax="true" data-ajax-method="get" data-ajax-complete="GetCreatePage" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Apply</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function(){
          $("#data").DataTable();
    });
</script>

