@model FeemanagementSystem.Models.DocumentType

@{
    ViewData["Title"] = "Edit";
}


<form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Update Categories:</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <input type="hidden" asp-for="TypeId" />
            <div class="form-group">
                <label asp-for="DocumetCat" class="control-label"></label>
                <input asp-for="DocumetCat" class="form-control" />
                <span asp-validation-for="DocumetCat" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
      </div>
            
          
        </form>
    

