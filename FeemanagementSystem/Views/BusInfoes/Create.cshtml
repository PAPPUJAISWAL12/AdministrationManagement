@model FeemanagementSystem.Models.BusInfo

@{
    ViewData["Title"] = "Create";
}
        <form asp-action="Create" data-ajax="true" data-ajax-method="Post" data-ajax-complete="PostCreate">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Add New Bus Information</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DestinationAddress" class="control-label"></label>
                <input asp-for="DestinationAddress" class="form-control" />
                <span asp-validation-for="DestinationAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusFee" class="control-label"></label>
                <input asp-for="BusFee" class="form-control" />
                <span asp-validation-for="BusFee" class="text-danger"></span>
            </div>
           

        </div>
        <div class="modal-footer">
            
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>

</form>

