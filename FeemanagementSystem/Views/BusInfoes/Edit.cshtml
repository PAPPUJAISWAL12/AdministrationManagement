@model FeemanagementSystem.Models.BusInfo

@{
    ViewData["Title"] = "Edit";
}

        <form asp-action="Edit">
           
           
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Update Bus Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <input type="hidden" asp-for="Bid" />
                    <div class="form-group">
                        <label asp-for="DestinationAddress" class="control-label"></label>
                        <input asp-for="DestinationAddress" class="form-control" />
                        <span asp-validation-for="DestinationAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BusFee" class="control-label"></label>
                        <input asp-for="BusFee" class="form-control" />
                        <span asp-validation-for="BusFee" class="text-danger"></span>
                    </div>


                </div>
                <div class="modal-footer">

                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </form>
    
