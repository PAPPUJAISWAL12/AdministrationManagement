@model FeemanagementSystem.Models.FeeSheet
@{
    ViewData["Title"] = "Create";
}
<form asp-action="Create">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Add New FeeSheet:</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StdId" class="control-label"></label>
                <select asp-for="StdId" class="form-control" asp-items="@ViewBag.stdlist"></select>
            </div>
            <div class="form-group">
               
                <input asp-for="Fid" hidden class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" class="form-control" />
            </div>
            
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>
</form>

