
@{
    ViewData["Title"] = "Index";
}

<style>
    .leter{
        background-color: #2f84f5!important;
        color:white!important;
        width:50px;
        border-radius:30px;
    }
    p{
        color: #bfbfbf;
    }
    .card{
        width:240px;
        position:relative;
    }
    .read-content{
        background-color:red;
        position:absolute;
       height:30px;
        margin-left:210px;
        
    }
    .read-content p{
            color: white !important;
    }
    @@media(max-width:991px){
        .card{
            width:200px;
        }
        .read-content{
            margin-left:160px;
        }
    }
    @@media(max-width:767px){
        .card {
            width: 220px;
        }

        .read-content {
            margin-left: 190px;
        }
    }
    @@media(max-width:544px){
        .card {
            width: 180px;
        }

        .read-content {
            margin-left: 150px;
        }
    }
    @@media(max-width:464px){
        .card {
            width: 100%;
        }

        .read-content {
            margin-left:0px;
            margin-top:75px;
        }
    }

  
</style>

<div class="container">
    <div class="mt-5">
        <h1> Admin-Dashboard</h1>
        <hr>
    </div>
            <div class="d-flex flex-wrap flex-md-row mt-5 justify-content-center">
               <div class="card m-3 p-2">                      
                    <div class="read-content p-1"><p>Read</p></div>                       
                        <div class="suggestion-content">
                            <div class="d-flex">
                                <div class="leter"><h2 id="leter" class="text-uppercase text-center"><i class="fa-solid fa-user-group" style="color: #fafafa;"></i></h2> </div>
                                <h3 id="name" class="text-capitalize m-2  text-center">@ViewBag.StdCount</h3>                                
                            </div>
                             <p class="m-3 ">No. Of Student</p>
                        </div>
                    </div>
                
            </div>
        
</div>
